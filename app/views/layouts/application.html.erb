<!DOCTYPE html>
<html>
	<head>
		<title>Force Directed Rails</title>
		<%= stylesheet_link_tag "scaffolds" %>
		<%= stylesheet_link_tag "force_graph" %>
		<%= stylesheet_link_tag "depot", :media => "all" %>
		<%= javascript_include_tag "application" %>
		<%= javascript_include_tag :defaults -%>
		<%= yield(:head) -%>
		<%= csrf_meta_tag %>
	</head>
	<body id="store" >
		<div id="banner">
			<%= @page_title || "Discovery Force Directed Example" %>
		</div>
		<div id="columns">
			<div id="side">
				<br /><br />
				<%= link_to 'Ex1', graph_ex1_path %>
				<br /><br />
				<%= link_to 'Ex2', graph_ex2_path %>
				<br /><br />
				<%= link_to 'Ex3', graph_ex3_path %>
				<br /><br />
			</div>
			<div id="main">
				<%= yield %>
			</div>
		</div>
	</body>
</html>